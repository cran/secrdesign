citHeader("To cite package 'secrdesign' in publications use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
vers <- paste("R package version", meta$Version)
url <- "http://CRAN.R-project.org/package=secrdesign"

citEntry(entry="Manual",
    title = "secrdesign: Sampling Design for Spatially Explicit Capture-Recapture",
    author = personList(as.person("Murray Efford")),
    year = year,
    note = vers,
    url = url,
    textVersion =
        paste("Efford, M. G. (", year,
        "). secrdesign:  Sampling Design for Spatially Explicit Capture-Recapture. ",
        vers, ". ", url, 
        sep = "")
)
